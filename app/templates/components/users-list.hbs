<table class="table table-hover reel-table">
  <tbody>
    {{#each usersExceptMe as |user|}}
      {{#link-to 'dashboard.users.user' user tagName="tr" valign="middle"}}
          <td>
            <div class="media">
              <span class="pull-left">
                <img src="{{user.image}}" class="md-img">
              </span>
              <div class="media-body">
                <span class="pull-right conn-status">
                  {{#if (get (user-status user statuses) 'isConnected')}}
                    {{ui-icon 'circle' size='12' color='#27ae60'}}
                    Connected
                  {{else}}
                    {{ui-icon 'circle' size='12' color='#c0392b'}}
                    Not connected
                  {{/if}}
                </span>
                <h5>{{user.firstname}} {{user.lastname}}</h5>
                {{ui-icon 'github'}}{{get (user-status user statuses) 'currentBranch'}}
              </div>
            </div>
          </td>
      {{/link-to}}
    {{/each}}
  </tbody>
</table>
